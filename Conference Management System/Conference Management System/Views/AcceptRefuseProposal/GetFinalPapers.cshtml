@model IEnumerable<Conference_Management_System.Models.Submission>

@{
    ViewBag.Title = "GetFinalPapers";
}
<h2>Papers</h2>


<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Qualifiers
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <ul>
                    @foreach (var qualifier in item.Qualifiers)
                    {
                        <li>
                            @qualifier.Value by @qualifier.Reviewer.Name
                        </li>
                    }
                </ul>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (item.Status == Conference_Management_System.Models.StatusValues.PENDING)
                {
                    @Html.ActionLink("Accept", "ChangeStatus", "AcceptRefuseProposal", new { id = item.Id, status = Conference_Management_System.Models.StatusValues.ACCEPT },null)
                    <br />
                    @Html.ActionLink("Refuse", "ChangeStatus", "AcceptRefuseProposal", new { id = item.Id, status = Conference_Management_System.Models.StatusValues.REFUSE },null)
                }
            </td>
        </tr>
                }

</table>
