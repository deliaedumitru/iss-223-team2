@model List<Conference_Management_System.Models.Submission>
@{
    ViewBag.Title = "Bid";
}
<br />
<form method="post">
    @foreach (var submission in Model)
    {
        <div class='container'>
            <div class='row'>
                <div class='col-md-offset-3 col-md-6'>
                    <div class='panel panel-default'>
                        <div class='panel-heading' style='background: #fff;'>
                            <div class="row">
                                <div class="col-xs-9">
                                    <h3 class='panel-title'>
                                        <b>Authors: </b>
                                        @foreach (var author in @submission.Authors)
                                        {
                                            <i>@author.Name </i>
                                        }
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class='panel-body'>
                            @submission.Meta
                        </div>
                        <div class='panel-footer' style='background: #fff;'>
                            <select name="@submission.Id" id="@submission.Id">
                                @if (@submission.Bids.Count == 0)
                                {
                                    <option disabled selected></option>
                                    foreach (String i in Enum.GetNames(typeof(Conference_Management_System.Models.BidValues)))
                                    {
                                            <option value="@i">@i</option>
                                    }
                                }
                                else
                                {
                                    foreach (String i in Enum.GetNames(typeof(Conference_Management_System.Models.BidValues)))
                                    {
                                        if (@submission.Bids.First().Value.ToString().CompareTo(i) == 0)
                                        {
                                            <option value="@i" selected>@i</option>
                                        }
                                        else
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    }
                                }
                            </select>
                            <i style="color:dimgrey">*Make sure you save the changes!</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class='container' style="text-align: center;">
        <input type="submit" value="Save">
    </div>
</form>